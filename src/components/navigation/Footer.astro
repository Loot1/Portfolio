---
const today = new Date();
import { Icon } from "astro-icon/components";
---

<footer
    class="flex flex-col items-center container mx-auto p-10 text-center gap-10 pb-40"
>
    &copy; {today.getFullYear()} Louis SACHY
    <div class="flex items-center gap-6 text-5xl">
        <div class="border-1 p-1 border-black rounded-md bg-pblue shadow-card hover:shadow-hover transition">
            <a
                href="https://www.linkedin.com/in/louis-sachy/"
                target="_blank"
            >
                <Icon name="linkedin" size="45" />
            </a>
        </div>
        <a
            href="https://github.com/Loot1"
            target="_blank"
            class="border-1 p-1 border-black rounded-full bg-pgreen shadow-card hover:shadow-hover transition"
        >
            <Icon name="github" size="50" />
        </a>
        <a
            href="https://gitlab.com/Loot1"
            target="_blank"
            class="border-1 p-1 border-black rounded-full bg-pyellow shadow-card hover:shadow-hover transition"
        >
            <Icon name="gitlab" size="50" />
        </a>
    </div>
</footer>
